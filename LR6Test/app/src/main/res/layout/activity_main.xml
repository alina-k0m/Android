<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/buttonSaveInternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить во внутреннем хранилище"/>

    <Button
        android:id="@+id/buttonSaveExternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить во внешнем хранилище"/>

    <Button
        android:id="@+id/buttonSaveSQLite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить в SQLite"/>

    <Button
        android:id="@+id/buttonLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Загрузить"/>

    <TextView
        android:id="@+id/textViewOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
